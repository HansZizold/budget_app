<div>
  <div class = "flex flex-row justify-start w-full bg-[#3778c2] text-white text-center py-3 text-xl">
    <%= button_to "EXIT", destroy_user_session_path, method: :delete, class: 'ml-4 text-[12px]' %>
    <h2 class = "w-full mr-4" >TRANSACTIONS</h2>
  </div>
  <div class = "flex flex-row justify-between px-2 bg-[#f1f3f2] py-6">
    <p><%= @cat.name %></p>
    <p>Amount: $<%= @cat.total_amount(@cat.id) %></p>
  </div>
</div>

<div class = "w-full">
  <div class = "flex flex-col bg-[#f1f3f2] w-full">
    <% @opers.each do |oper| %>
      <div class = "flex flex-row justify-between mx-4 mb-1 bg-[#fdfdfd] text-[#9e9e9e]">
        <div>
          <div class="w-[20%] pl-4 py-2"><%= oper.operation.name %></div>
          <div class="pl-4 py-2 text-[12px]"><%= oper.operation.created_at %></div>
        </div>
        <div class = "flex flex-col justify-between pr-4 py-2">$<%= oper.operation.amount %></div>
      </div>
    <% end %>
  </div>

  <div class="fixed bottom-0 w-full">
    <%= link_to new_operation_path(@cat) do %>
      <button class = "w-full bg-[#60b524] text-[#f1f3f2] pt-4 pb-1">
        <p class = "mx-4 py-2 border-2 border-[#f1f3f2]">ADD A NEW TRANSACTION</p>
      </button>
    <% end %>
    <%= link_to groups_path do %>
      <button class = "w-full bg-[#60b524] text-[#f1f3f2] pb-4">
        <p class = "mx-4 py-2 border-2 border-[#f1f3f2]">GO TO CATEGORIES PAGE</p>
      </button>
    <% end %>
  </div>
</div>
