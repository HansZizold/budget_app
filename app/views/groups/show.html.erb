<div class = "flex flex-row justify-between w-full bg-blue-600 text-white text-center pb-2 text-xl">
  <h2 class = "ml-4"><%= @cat.name %> Amount: $<%= @cat.total_amount(@cat.id) %></h2>
  <%= button_to "LOG OUT", destroy_user_session_path, method: :delete, class: 'mr-4' %>
</div>

<div class = "flex flex-col bg-gray-100 w-full">
  <%= link_to groups_path do %>
    <div class="mx-4">
      <button class = "w-full border-2 bg-gray-300 hover:bg-blue-600 hover:text-white">CATEGORIES PAGE</button>
    </div>
  <% end %>

  <% @opers.each do |oper| %>
    <div class = "flex flex-row justify-between mx-4 mb-1 bg-gray-300">
      <div class="w-[20%] pl-4 py-2"><%= oper.operation.name %></div>
      <div class = "flex flex-col justify-between pr-4 py-2">$<%= oper.operation.amount %></div>
    </div>
  <% end %>

  <%= link_to new_operation_path(@cat) do %>
    <div class="mx-4">
      <button class = "w-full border-2 bg-gray-300 hover:bg-blue-600 hover:text-white">ADD A NEW TRANSACTION</button>
    </div>
  <% end %>
</div>
