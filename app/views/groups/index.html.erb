<div class = "flex flex-row justify-between w-full bg-blue-600 text-white text-center pb-2 text-xl">
  <h2 class = "ml-4" >CATEGORIES</h2>
  <%= button_to "LOG OUT", destroy_user_session_path, method: :delete, class: 'mr-4' %>
</div>
<div class = "flex flex-col bg-gray-100 w-full">
  <% @cats.each do |cat| %>
    <div class = "flex flex-row justify-between mx-4 my-2 bg-gray-300">
      <% if cat.icon.attached? %>
        <div class="w-[20%] pl-2 py-2">
          <%= link_to group_path(cat) do %>
            <%= image_tag cat.icon %>
          <% end %>
        </div>
      <% end %>
      <div class = "flex flex-col justify-between pr-4 py-4">
        <%= link_to group_path(cat) do %>
          <p><%= cat.name %></p>
        <% end %>
        <p>Total Amount: $<%= cat.total_amount(cat.id) %></p>
      </div>
    </div>
  <% end %>
  <%= link_to new_group_path do %>
    <div class="mx-4">
      <button class = "w-full border-2 bg-gray-300 hover:bg-blue-600 hover:text-white">ADD NEW CATEGORY</button>
    </div>
  <% end %>
</div>
