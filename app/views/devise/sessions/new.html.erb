<h2 class = "w-full bg-blue-600 text-white text-center pt-2 pb-2 mb-2">LOG IN</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: 'border-1 border-gray-200 border-x-white w-full focus:border-gray-400' %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: 'border-1 border-gray-200 border-x-white w-full focus:border-gray-400' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "LOG IN", class: 'w-full border-2 border-white hover:bg-blue-600 hover:text-white cursor-pointer' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
